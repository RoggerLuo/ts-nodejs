    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TypeScript in Node.js",
            "preLaunchTask": "typescript",
            "program": "${workspaceFolder}/src/hello.ts",
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "runtimeExecutable": "nodemon",
            "restart": true,
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/dist/*.js"
            ],
          }
    ]
}